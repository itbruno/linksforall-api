generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  name          String
  email         String   @unique
  bio           String
  profile_photo String
  Links         Links[]
}

model Links {
  link_id     String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  url         String
  description String
  order       Int

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}
